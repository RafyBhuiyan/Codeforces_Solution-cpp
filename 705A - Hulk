#include <bits/stdc++.h>
using namespace std;
 
int main()
{
    int n;
    cin>> n;
    for(int i=0;i<n;i++){
        if(i%2==0){
            printf("I hate");
        }
        else{
            printf("I love");
        }
        if(i<n-1)
            printf(" that ");
        if(i==n-1)
            printf(" it");
    }
    return 0;
}
